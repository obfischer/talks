require 'asciidoctor'
#require 'tilt'

task default: %w[html5]

MASTER_FILENAME='slides.adoc'
OUTPUT_FILENAME='index.html'


#--------------------------------------------------------------------

task :html5 do
  puts "Erzeuge die PrÃ¤sentation aus #{MASTER_FILENAME}"

  begin
    Asciidoctor.convert_file MASTER_FILENAME,
                             safe: :safe,
                             to_file: OUTPUT_FILENAME,
                             backend: 'revealjs'

    puts "ğŸ€\t#{OUTPUT_FILENAME} erzeugt"
  rescue StandardError => e
    puts "ğŸ§¨\t" +  e.message
  end


end

task :clean do


end